<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/appcolor">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/lexend"
        android:text="@string/templates"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/temp0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/rounded_bg"
                android:padding="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@drawable/ic_oo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/temp1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/temp1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_bg"
                android:padding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_1"
                app:layout_constraintBottom_toBottomOf="@+id/temp0"
                app:layout_constraintEnd_toStartOf="@+id/temp2"
                app:layout_constraintStart_toEndOf="@+id/temp0"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/temp2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/rounded_bg"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_2"
                app:layout_constraintEnd_toStartOf="@+id/temp3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/temp1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/temp3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/rounded_bg"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/tempo3"
                app:layout_constraintEnd_toStartOf="@+id/temp4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/temp2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/temp4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/rounded_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/tempo4"
                app:layout_constraintEnd_toStartOf="@+id/temp5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/temp3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/temp5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/rounded_bg"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/tempo5"
                app:layout_constraintEnd_toStartOf="@+id/temp6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/temp4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/temp6"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/rounded_bg"
                android:paddingEnd="@dimen/_5sdp"
                android:src="@drawable/ic_tempp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/temp5"
                app:layout_constraintTop_toTopOf="@+id/temp1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/tvFrameColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold"
        android:text="Frame Colors"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/scrollView3" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDoneTemplates"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/appBlue"
        android:fontFamily="@font/lexend"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvFrameColor">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/noColor"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/new1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/framecolor1" />

            <ImageView
                android:id="@+id/framecolor1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/frame_color1"
                app:layout_constraintEnd_toStartOf="@+id/framecolor2"
                app:layout_constraintStart_toEndOf="@+id/noColor"
                app:layout_constraintTop_toTopOf="@+id/framecolor2" />

            <ImageView
                android:id="@+id/framecolor3"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/frame_color3"
                app:layout_constraintStart_toEndOf="@+id/framecolor2"
                app:layout_constraintTop_toTopOf="@+id/framecolor2" />

            <ImageView
                android:id="@+id/framecolor2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/frame_color2"
                app:layout_constraintEnd_toStartOf="@+id/framecolor3"

                app:layout_constraintStart_toEndOf="@+id/framecolor1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/framecolor4"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/frame_color4"
                app:layout_constraintStart_toEndOf="@+id/framecolor3"
                app:layout_constraintTop_toTopOf="@+id/framecolor3" />

            <ImageView
                android:id="@+id/framecolor5"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/frame_color5"
                app:layout_constraintStart_toEndOf="@+id/framecolor4"
                app:layout_constraintTop_toTopOf="@+id/framecolor4" />

            <ImageView
                android:id="@+id/framecolor6"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/frame_color6"
                app:layout_constraintStart_toEndOf="@+id/framecolor5"
                app:layout_constraintTop_toTopOf="@+id/framecolor5" />

            <ImageView
                android:id="@+id/framecolor7"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/frame_color7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/framecolor6"
                app:layout_constraintTop_toTopOf="@+id/framecolor6" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
